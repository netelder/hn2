<div class="container">


  <% @comments.each do |comment| %>
    <div id="comment_post"><a href='/posts/<%=comment.post.id%>'><%= comment.post.title%></a></div>
    <div class="comment_upvote" value="<%=comment.id%>"></div>
    <div id="comment_score"><%= comment.score%></div>
    <div id="comment_body"><%= comment.body%></div>

  <% end %>
</div>
